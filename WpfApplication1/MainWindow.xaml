<Window x:Class="WpfApplication1.MainWindow"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Барная система CoctaillMeister" Height="800" Width="1000">
    <Grid>
        <StackPanel>
        <Menu VerticalAlignment="Top">
            <MenuItem Header="Настройка">
                <MenuItem Header="Справочники">
                    <MenuItem Header="Тара" Click="OpenTara_Click"/>
                    <MenuItem Header="Ингредиенты" Click="OpenIngredient_Click"/>
                    <MenuItem Header="Коктейли" Click="OpenCocktail_Click"/>
                </MenuItem>
            </MenuItem>
        </Menu>
            <GroupBox Header="Коктейли" Margin="10">
                <WrapPanel x:Name="CocktailButtonsPanel"
                  Margin="10,50,10,10"
                  HorizontalAlignment="Center"
                  MaxWidth="980"/>
            </GroupBox>
            <Frame x:Name="ContentFrame"
               Margin="0,100,0,0"
               NavigationUIVisibility="Hidden"/>
        </StackPanel>
    </Grid>
</Window>
