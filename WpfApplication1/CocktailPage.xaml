<Page x:Class="WpfApplication1.CocktailPage"       
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Справочник коктейлей">
    <Grid Margin="10" >
        <StackPanel>
        <DataGrid x:Name="CocktailGrid"
                  SelectedCellsChanged="CocktailGrid_SelectedCellsChanged_1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="True"
                  IsReadOnly="False"
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="200" IsReadOnly="True"/>
                <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="250"/>
                <DataGridTextColumn Header="% Заполнения тары" Binding="{Binding FillingPercentage}" Width="130" IsReadOnly="True"/>
                </DataGrid.Columns>          
        </DataGrid>
            <Button Content="Удалить коктейль" HorizontalAlignment="Right" Click="DeleteCocktail_Click" Width="120" Height="30" Margin="10" />
            <DataGrid x:Name="CocktailIngridientsGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="True"
                  IsReadOnly="False"
                 >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Содержание, %" Binding="{Binding Percentage}" Width="100" />
                <DataGridComboBoxColumn x:Name="comboBoxColum" Header="Ингридиент" SelectedValueBinding="{Binding IngredientId}" SelectedValuePath="Id" DisplayMemberPath="Name"/>
            </DataGrid.Columns>
        </DataGrid>



            <Label Content="*Для удаления ингридиента, выберите пустое поле"></Label>
            <StackPanel Height="40" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10">
                <Button Content="Закрыть" Click="Close_Click" HorizontalAlignment="Left" Width="120" Height="30" />
                <Button Content="Сохранить" HorizontalAlignment="Right"  Click="SaveCocktail_Click" Width="120" Height="30"  />
            </StackPanel>
        </StackPanel>
        
       
    </Grid>
</Page>
