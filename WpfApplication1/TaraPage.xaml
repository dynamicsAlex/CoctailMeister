<Page x:Class="WpfApplication1.TaraPage"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Справочник тары">
    <Grid Margin="10">
        <StackPanel>
        <DataGrid x:Name="TaraGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="True"
                  IsReadOnly="False"
                  Margin="0,0,0,40">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="200" IsReadOnly="True"/>
                <DataGridTextColumn Header="RFID метка" Binding="{Binding RFID_Metka}" Width="150"/>
                <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Вес (Нетто)" Binding="{Binding WeightNetto}" Width="100"/>
                <DataGridTextColumn Header="Объём (г)" Binding="{Binding Volume}" Width="100"/>
                <DataGridComboBoxColumn x:Name="comboBoxColum" Header="Коктейль" SelectedValueBinding="{Binding CoctailId}" SelectedValuePath="Id" DisplayMemberPath="Name"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="*Для удаления тары, сотрите RFID-метку"></Label>
            <StackPanel Orientation="Horizontal">
                <Button Content="Закрыть" Click="Close_Click"
                HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Height="30"/>
            <Button Content="Сохранить" Click="Save_Click"
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Height="30"/>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Page>
